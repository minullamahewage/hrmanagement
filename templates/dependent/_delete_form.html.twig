<form method="post" action="{{ path('dependent_delete', {'dependentId': dependent.dependentId}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dependent.dependentId) }}">
    <button class="btn">Delete</button>
</form>
