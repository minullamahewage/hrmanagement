{% extends 'base.html.twig' %}

{% block title %}Employee Details{% endblock %}

{% block body %}
    <h1>Employee Details</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>EmpId</th>
                <td>{{ employee.empId }}</td>
            </tr>
            <tr>
                <th>Nic</th>
                <td>{{ employee.nic }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ employee.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ employee.email }}</td>
            </tr>
            <tr>
                <th>AddrLine1</th>
                <td>{{ employee.addrLine1 }}</td>
            </tr>
            <tr>
                <th>AddrLine2</th>
                <td>{{ employee.addrLine2 }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ employee.city }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ employee.country }}</td>
            </tr>
            <tr>
                <th>PostalCode</th>
                <td>{{ employee.postalCode }}</td>
            </tr>
            <tr>
                <th>Telephone No</th>
                {% for telephone in emp_telephone %}
                    <tr><th></th><td>{{telephone.telephone}}</td></tr>
                {% endfor %}
            </tr>
            <tr>
                <th>Dob</th>
                <td>{{ employee.dob ? employee.dob|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>MaritalStatus</th>
                <td>{{ employee.maritalStatus }}</td>
            </tr>
            <tr>
                <th>BranchId</th>
                <td>{{ employee.branchId }}</td>
            </tr>
            <tr>
                <th>PayGrade</th>
                <td>{{ employee.payGrade }}</td>
            </tr>
            <tr>
                <th>SupervisorId</th>
                <td>{{ employee.supervisorId }}</td>
            </tr>
            <tr>
                <th>DeptId</th>
                <td>{{ employee.deptId }}</td>
            </tr>
            <tr>
                <th>Employment Status</th>
                <td>{{ employee.empStatus }}</td>
            </tr>
            <tr>
                <th>Job Title</th>
                <td>{{ employee.jobTitle }}</td>
            </tr>
            {% for customData in custom_data %}            
                <tr>
                    <th>{{ customData.attribute|replace({'_' :' '  ,}) }}</th>
                    <td>{{ customData.value }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('employee_index') }}">back to list</a><br>

    <a href="{{ path('employee_edit', {'empId': employee.empId}) }}">edit</a><br>
    <a href="{{ url('dependent_emp', {'empId': employee.empId}) }}">View Dependents</a><br>
    <a href="{{ url('emergency_contact_emp', {'empId': employee.empId}) }}">View Emergency Contacts</a><br>
    <a href="{{ url('employee_subordinate', {'empId': employee.empId}) }}">View Subordinates</a><br>
    <a href="{{ url('employhistory_emp', {'empId': employee.empId}) }}">View Employment History</a><br>
    <a href="{{ url('leave_emp_admin', {'empId': employee:empId}) }}">View Leaves</a>


    {{ include('employee/_delete_form.html.twig') }}
{% endblock %}
