<form method="post" action="{{ path('leave_approve', {'leaveFormId': leave.leave_form_id,'empId' : emp_id}) }}" onsubmit="return confirm('Are you sure you want to approve this leave');">
    <input type="hidden" name="_method" value="APPROVE">
    <input type="hidden" name="_token" value="{{ csrf_token('approve' ~ leave.leave_form_id) }}">
    <button class="btn">Approve</button>
</form>
